{
  "name": "dev-zikky-md-bot",
  "version": "1.0.0",
  "description": "DEV-ZIKKY MD WhatsApp Bot Pairing System",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "start:optimized": "node --max-old-space-size=512 --optimize-for-size --gc-interval=100 index.js",
    "dev": "nodemon index.js",
    "cleanup": "node cleanup.js",
    "reset-session": "rm -rf ./pair_sessions ./qr_sessions",
    "start:clean": "npm run reset-session && npm run start:optimized",
    "start:fresh": "npm run reset-session && npm start",
    "test": "echo \"No tests specified\" && exit 0",
    "health": "curl http://localhost:8000/health || echo 'Server not running'"
  },
  "author": "DEV ZIKKY",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/zikky0001-droid/dev-zikky-md-bot.git"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "pairing",
    "session",
    "baileys"
  ],
  "dependencies": {
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "awesome-phonenumber": "^7.2.0",
    "axios": "^1.8.4",
    "body-parser": "^1.20.3",
    "express": "^4.21.2",
    "pino": "^9.5.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.33.5",
    "events": "^3.3.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  },
  "overrides": {
    "sharp": "^0.33.5"
  }
}
